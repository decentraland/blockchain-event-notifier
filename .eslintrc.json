{
  "extends": "@dcl/eslint-config/sdk",
  "parserOptions": {
    "project": [
      "tsconfig.json",
      "test/tsconfig.json"
    ]
  },
  "ignorePatterns": ["dist/", "test/", "*.js", "*.d.ts", "*.json", "src/index.ts", "coverage/"],
  "rules": {
    "prettier/prettier": ["error", {
      "printWidth": 120,
      "semi": false,
      "singleQuote": true,
      "trailingComma": "none",
      "tabWidth": 2
    }]
  }
}
